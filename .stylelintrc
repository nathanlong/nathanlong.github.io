{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": 2,
    "order/order": ["custom-properties", "declarations"],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "else",
          "extend",
          "for",
          "function",
          "if",
          "include",
          "layer",
          "mixin",
          "responsive",
          "return",
          "screen",
          "tailwind",
          "variants",
          "warn"
        ]
      }
    ],
    "order/properties-alphabetical-order": true,
    "no-descending-specificity": null
  }
}
